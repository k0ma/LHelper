@model AddCategoryFormModel

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.AllTrainers"></label>
        @if (!Model.ForEdit)
        {
            <select asp-for="@Model.SelectedTrainers" asp-items="Model.AllTrainers" multiple class="form-control"></select>
            <small>* Hold "Ctrl" to select more than one trainer</small>
        }
    </div>
    <button type="submit" class="btn btn-default">Save</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
